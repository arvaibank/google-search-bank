{
  "welcomeFile": "/search_ui/index.html",
  "authenticationMethod": "route",
  "routes": [
    {
      "source": "^/search_ui/(.*)$",
      "target": "$1",
      "localDir": "search_ui",
      "authenticationType": "none",
      "csrfProtection": false
    },
    {
      "source": "^/rest/(.*)$",
      "target": "/rest/$1",
      "destination": "srv-api",
      "authenticationType": "xsuaa"
    },
    {
      "source": "^/(.*)$",
      "target": "$1",
      "destination": "srv-api",
      "authenticationType": "xsuaa",
      "csrfProtection": true
    }
  ]
}
