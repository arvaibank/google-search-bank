<mvc:View
    controllerName="com.sap.searchui.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
    displayBlock="true">
    <Shell>
        <App>
            <pages>
                <Page title="{i18n>title}">
                    <content>
                        <VBox class="sapUiSmallMargin">
                            <Title text="Keyword File Uploader" class="sapUiSmallMarginBottom"/>
                            <u:FileUploader
                                id="fileUploader"
                                name="myFileUpload"
                                uploadUrl="/rest/upload"
                                tooltip="Upload your .csv or .xlsx file with keywords"
                                fileType="csv,xlsx"
                                sendXHR="true"
                                useMultipart="false"
                                placeholder="Choose a file..."
                                change="onFileChange"
                                uploadComplete="onUploadComplete"/>
                            <Button
                                id="uploadButton"
                                text="Upload and Process"
                                press="onUploadPress"
                                enabled="false"
                                class="sapUiSmallMarginTop"/>
                        </VBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
